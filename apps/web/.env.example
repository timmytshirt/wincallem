# ---- URLs ----
# Frontend base URL (used for redirects, success/cancel pages)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# If you call FastAPI directly from the browser (client-side)
NEXT_PUBLIC_API_URL=http://localhost:8000

# If you use the server-side proxy (/api/proxy/*), it needs this:
API_BASE_URL=http://localhost:8000

# ---- Auth.js (NextAuth) ----
# Use a strong 32+ char secret (see command below)
AUTH_SECRET=changeme
# NextAuth uses NEXTAUTH_URL; AUTH_URL is kept for compatibility with some setups
NEXTAUTH_URL=http://localhost:3000
AUTH_URL=http://localhost:3000

# ---- Email (magic link provider) ----
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your-username
EMAIL_PASS=your-password
EMAIL_FROM="noreply@wincallem.com"

# ---- Database (switch Prisma to Postgres) ----
# Example: Neon/Supabase connection string. Replace with real creds.
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# ---- Stripe (TEST keys) ----
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# Your product/price IDs in Stripe
STRIPE_PRICE_ID_STARTER=price_...
STRIPE_PRICE_ID_PRO=price_...
# Webhook signing secret from `stripe listen` or dashboard
STRIPE_WEBHOOK_SECRET=whsec_...

