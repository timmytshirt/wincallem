# ---- URLs (frontend) ----
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000

# ---- NextAuth (v4) ----
# Use a strong secret in .env.local (do NOT commit real values)
NEXTAUTH_SECRET=__REPLACE_ME_STRONG_RANDOM__
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_DEBUG=false

# JWT metadata (must match API)
AUTH_JWT_ISS=winclm
AUTH_JWT_AUD=api

# ---- Email (magic-link via SMTP) ----
# Use your own SMTP; if password has @:/%, URL-encode it
EMAIL_SERVER=smtp://USER:PASS@HOST:PORT
EMAIL_FROM=WinCallem <hello@wincallem.local>

# ---- Database (Neon Postgres) ----
# Examples onlyâ€”replace with your Neon URLs in .env.local
DATABASE_URL=postgresql://USER:PASSWORD@HOST/dbname?sslmode=require&pgbouncer=true&connection_limit=1
DIRECT_DATABASE_URL=postgresql://USER:PASSWORD@HOST/dbname?sslmode=require

